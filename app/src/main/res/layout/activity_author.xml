<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".AuthorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Banner Section -->
        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            android:contentDescription="Developer Team"
            android:layout_alignParentTop="true" />

        <!-- App Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TENTANG PENGEMBANG"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/bannerImage"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Developer Info Container -->
        <LinearLayout
            android:id="@+id/developerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/titleText"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:elevation="2dp">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="Foto Developer"
                android:padding="4dp"
                android:src="@drawable/gs"
                android:background="@drawable/bingkai"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvDeveloperName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GILANG SUBAGIO"
                android:textColor="#6200EE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Pribadi"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- NIM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM:"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/tvNim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20210810058"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- University -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Universitas:"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/tvUniversity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Universitas Kuningan"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gilangsubagio9@gmail.com"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Contact (kosong) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <!-- Tambahkan isi jika diperlukan -->
            </LinearLayout>
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:layout_below="@id/developerContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />
    </RelativeLayout>
</ScrollView>
