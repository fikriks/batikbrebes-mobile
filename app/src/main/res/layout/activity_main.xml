<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main">

    <!-- Banner Section -->
    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        android:contentDescription="Banner Batik Brebes"
        android:layout_alignParentTop="true"/>

    <!-- App Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BATIK BREBES"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/bannerImage"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menggali kearifan Batik tulis Brebes"
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@id/titleText"
        android:layout_marginBottom="32dp"/>

    <!-- Scan Button Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/subtitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <!-- Scan Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/scanButton"
            android:layout_width="335dp"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:text="Mulai Pemindaian QR"
            android:background="@drawable/btn1"
            android:textColor="@color/white"/>
        <!-- Instruction Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arahkan kamera ke QR Code untuk memulai"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"/>
        <!-- Button Petunjuk -->

    </LinearLayout>
    <!-- Tombol Petunjuk - Pojok Kiri Bawah -->
    <ImageButton
        android:id="@+id/buttonPetunjuk"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_info_background"
        android:src="@drawable/ic_info"
        android:contentDescription="Petunjuk"
        android:scaleType="centerInside"
        app:tint="#444444"/>

    <!-- Tombol Developer - Pojok Kanan Bawah -->
    <ImageButton
        android:id="@+id/buttonDeveloper"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_info_background"
        android:src="@drawable/ic_person"
        android:contentDescription="Info Developer"
        android:scaleType="centerInside"
        app:tint="#444444"/>

</RelativeLayout>