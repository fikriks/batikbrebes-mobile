<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:name=".ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Banner Section -->
        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            android:contentDescription="Banner Batik Brebes"
            android:layout_alignParentTop="true"/>

        <!-- App Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HASIL PEMINDAIAN"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/bannerImage"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Result Container -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/titleText"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/ivProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Foto Produk"
                android:layout_marginBottom="16dp"/>

            <!-- Kode Asli -->
            <TextView
                android:id="@+id/tvKodeAsli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Asli: -"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Motif -->
            <TextView
                android:id="@+id/tvMotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motif: -"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Tanggal Produksi -->
            <TextView
                android:id="@+id/tvTanggalProduksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Produksi: -"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Nama Pembuat -->
            <TextView
                android:id="@+id/tvNamaPembuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pembuat: -"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi: -"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Harga -->
            <TextView
                android:id="@+id/tvHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga: -"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultContainer"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#6200EE"
            android:text="Kembali"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</ScrollView>